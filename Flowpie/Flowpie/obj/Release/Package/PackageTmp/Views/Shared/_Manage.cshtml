<!DOCTYPE html>
<html>

<head>
    <title>欢迎进入玩快递后台</title>
    <!-- Unresponsive -->
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/font.css">
    <link rel="stylesheet" href="/css/nanoscroller.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/global.css">

    <script src="/js/jquery-1.11.1.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script> 
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/nanoscroller.js"></script>
    <script type="text/javascript" src="/js/ajaxhelper.js"></script>
    <link rel="icon" href="/favicon.ico" mce_href="favicon.ico" type="image/x-icon" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>

    <script src="http://cdn.bootcss.com/html5shiv/3.7.0/html5shiv.min.js"></script>

    <script src="http://cdn.bootcss.com/respond.js/1.3.0/respond.min.js"></script>

    <![endif]-->
</head>

<body>
    <div class="dbmp-box">
        <div class="dbmp-search-clsbtn">
            &times;
        </div>
    </div>
    <div class="top-banner-fix">
        <div class="navigator-wp">
            <div class="navigator-menu clearfix">
                <div class="col pull-left">
                    <a href="#" class="logo pull-left" title="WINDTREND">
                        <img src="/img/windtrend-sm.png" />
                    </a>
                    <!--<span class="spliter pull-left"></span>-->
                    <!--<div class="nav-itm pull-left full-ico">
                        <input type="search" class="emboss" placeholder="请输入关键词"/>
                    </div>-->
                    <a href="javascript:void(0)" class="nav-itm navigator-menu-itm pull-left full-ico selected">我的工作</a>
                    <a href="javascript:void(0)" class="nav-itm navigator-menu-itm pull-left full-ico">日常办公</a>
                    <a href="javascript:void(0)" class="nav-itm navigator-menu-itm pull-left full-ico">系统管理</a>
                </div>
                <div class="col pull-right">
                    <a href="#" class="nav-itm pull-right full-ico">
                        <span class="halflings halflings-log-out"></span>
                    </a>
                    <!--<span class="spliter pull-right"></span>
                    <a href="#" class="nav-itm halflings halflings-glyph-bell pull-right full-ico"><span class="bell-content">6</span></a>-->

                    <span class="spliter pull-right"></span>
                    <div class="nav-itm-wp pull-right">
                        <a class="nav-itm dropdown-toggle" href="#" data-toggle="dropdown"> 你好，张晓明 <i class="halflings halflings-menu-hamburger"></i> </a>
                        <ul class="dropdown-menu fix-more-box-menu">
                            <li>
                                <a role="menuitem" tabindex="-1" href="#"><span class="halflings halflings-list-alt"></span> &nbsp; 个人信息</a>
                            </li>
                            <li>
                                <a role="menuitem" tabindex="-1" href="#"><span class="halflings halflings-glyph-bell"></span> &nbsp; 消息</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a role="menuitem" tabindex="-1" href="#"><span class="halflings halflings-off"></span> &nbsp; 安全退出</a>
                            </li>
                        </ul>
                    </div>
                    <span class="spliter pull-right"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="side-hide-back"></div>
    <div class="side-bar-fix">
        <div class="side-hide">
        </div>
        <div class="bfwh">
            <div class="nano">
                <div class="nano-content">
                    <div class="list-group">
                        @foreach (var menu in ViewData["menus"] as List<System.Collections.Hashtable>)
                        {
                            if (@menu["Level"].ToString() == "1")
                            {
                                string css = "";

                                if (ViewData["open_menu"] != null)
                                {
                                    css = "open";
                                }

                                <div class="list-group-item-primary @css" id="@menu["MenuID"].ToString()">
                                    <a href="#" class="awp">
                                        <span>@menu["MenuText"].ToString()</span>
                                    </a>
                                    <button class="arr"></button>
                                </div>
                            }
                            else
                            {
                                <div class="list-group-item-ddl" id="@menu["MenuID"].ToString()" rel="@menu["ParentID"].ToString()">
                                    <div class="list-group-item">
                                        <a href="@menu["Url"].ToString()" class="awp">
                                            <span>@menu["MenuText"].ToString()</span>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <script src="/js/global.js"></script>
</body>
</html>
