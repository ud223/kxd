<h1>清除本地记录</h1>
<!-- /container -->
<script type="text/javascript">

    function gjSetCookie(cname, cvalue, exdays) {
        var d = new Date();
        d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
        var expires = "expires=" + d.toUTCString();
        document.cookie = cname + "=" + cvalue + "; " + expires;
    }

    localStorage.clear();
    gjSetCookie("user_id", "", -1);
</script>