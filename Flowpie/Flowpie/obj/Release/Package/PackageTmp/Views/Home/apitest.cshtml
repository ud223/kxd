@{
    Layout = "~/Views/Shared/mobile.cshtml";
}
@{
    ViewBag.Title = ViewData["title"];
}

<button onclick="testTake()">测试</button>
<button onclick="testLogin()">登录</button>
<button onclick="smstest()">测试短信</button>
<script type="text/javascript">
    function testTake() {
        var params = {
            url: '/api/order/take',
            data: { 'courierid': '2015111300002', 'name': '测试二', 'phone': '345345345', 'orderid': '2015112700005' }
        }

        ajaxTo(params);
    }

    function testLogin() {
        var params = {
            url: 'http://120.24.154.122:8001/api/user/getRandomNum',
            data: { 'mobile': '15927094025' },
            type:'get'
        }

        ajaxTo(params);
    }

    function smstest() {
        var params = {
            url: '/api/tools/getRandomNum',
            data: { 'mobile': '15927094025' },
            successFun: success,
            errorFun: false
        }

        ajaxTo(params);
    }

    function success(data) {
        alert(JSON.stringify(data));
    }
</script>
