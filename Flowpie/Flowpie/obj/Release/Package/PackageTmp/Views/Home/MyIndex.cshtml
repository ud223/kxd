    {
        var item = ViewData["data"] as System.Collections.Hashtable;
        var default_image = "/img/user.jpg";

        if (item["headpic"].ToString() == "")
        {
            @default_image;
        }
        else
        {
            @item["headpic"].ToString();
        }   
    }" class="usrgmi">
