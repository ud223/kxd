<script type="text/javascript">
    $(document).ready(function () {
        $("#sign").click(function () {
            sign();
        });
    })

    function success(data) {
        var opertion = {
            msg: data.message,
            exitText: "关闭!"
        };

        $.alertbox(opertion);
    }

    function error() {
        var opertion = {
            msg: "签到失败 请重试!",
            exitText: "关闭!"
        };

        $.alertbox(opertion);
    }

    function sign() {
        var userid = $.cookie('user_id');

        var data = { 'userid': userid, 'score': 1 };

        var params = {
            url: '/api/user/Sign',
            data: data,
            successFun: success,
            errorFun: error
        }

        ajaxTo(params);
    }
</script>